int i = 1;

i++ == i = i + 1;
++i == i = i + 1;
i-- == i = i - 1;
--i == i = i - 1; 

while(i--) == while(1--) (first checks if 1 is true; then, subtracts 1 from 10)
 in the next line of code, i is now 0;

while(--i) == while(--10) (first subtracts 1 from 10; checks if 9 is true)
  in the next line of code, is now 9;






while (1--)
{
	print(i):
}
